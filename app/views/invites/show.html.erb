<div class="section is-medium">
  <div class="container">
    <div class="tile is-ancester">
      <div class="tile is-parent is-vertical is-4">
        <div class="tile is-child box">
          <div class="content">
            <h5 class="title is-5"><%= invite.username %></h5>
            <p><%= invite.rsvp ? invite.rsvp : 'No response' %></p>
          </div>
        </div>
        <div class="tile is-child box">
          <div class="content">
            <p class="heading">Invited at</p>
            <h5 class="title is-5"><%= invite.created_at %></h5>
          </div>
        </div>
      </div>
      <div class="tile is-parent">
        <div class="tile is-child box">
            <p class="heading">Message</p>
            <h5 class="title is-5"><%= invite.message %></h5>
        </div>
      </div>
    </div>
  </div>
</div>