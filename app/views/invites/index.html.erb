<%# Invites for a particular event (:event_id) %>
<section class="section">
  <div class="block">
    <div class="container">
      <h2 class="title is-2 has-text-weight-light is-lowercase"><span class="has-text-weight-normal">
        <%= Event.find(params[:event_id]).name %></span> invitations
      </h2>
    </div>
  </div>
  <div class="columns is-multiline">
    <%= render 'invites', invites: @invites %>
  </div>

  <div class="level">
    <div class="level-left">
      <div class="block">
        <div class="level-item">
          <nav class="pagination">
            <% unless @page.zero? %>
              <%= link_to "Previous Page", events_invites_path(page: @page - 1), class: 'pagination-previous' %>
            <% end %>
          </nav>
        </div>
      </div>
    </div>
    <div class="level-right">
      <div class="level-item">
        <nav class="pagination">
        <% if @older_invites.exists? %>
          <%= link_to "Next Page", events_invites_path(page: @page + 1), class: 'pagination-next' %>
        <% end %>
      </nav>
      </div>
    </div>
  </div>

</section>